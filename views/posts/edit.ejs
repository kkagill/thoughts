<!-- views/posts/index.ejs -->
<div class="edit">
  <h3>Edit Post</h3>
  <!-- method=put 이라서 app.js의 app.put으로간다. redirect 되어서 /posts로 간다. -->
  <form class="posts_form" action="/posts/<%=data._id%>?_method=put" method="post">
    <label>Title</label>
    <input type="text" class="form-control" name="post[title]" value="<%=data.title%>">
    <label>Body</label>
    <textarea class="form-control" rows="5" name="post[body]"><%=data.body%></textarea>
    <button type="submit" class="btn btn-info">Submit</button>
    <a href="/posts/<%=data._id%>"><button type="button" class="btn btn-info">Back</button><a>
  </form>
</div>

<!-- main end -->
